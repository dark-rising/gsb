<style>
  body {
    margin: 0;
  }

  .welcome {
    align-items: center;
    background: linear-gradient(to left, #ad5389, #3c1053);
    color: #fff;
    display: flex;
    font-family: Arial, 'Helvetica Neue', Helvetica, sans-serif;
    font-size: 30px;
    height: 100vh;
    justify-content: center;
  }

  .welcome h1 {
    font-weight: normal;
    line-height: 1;
    margin: 0;
  }

  .welcome code {
    background: rgba(0, 0, 0, 0.3);
    border-radius: 15px;
    box-shadow: 0 0 6px 1px rgba(255, 255, 255, 0.3);
    display: inline;
    padding: 5px 35px 10px 20px;
    position: relative;
  }

  .welcome .cursor {
    font-size: 44px;
    position: absolute;
    right: 10px;
    top: 20px;
  }
</style>
<div class="welcome">
  <h1>
    <code>{{ title }}<span class="cursor">|</span></code>
  </h1>
</div>
<script>
  (function() {
    let cursor = document.querySelector('.cursor');

    setInterval(() => {
      let displayMode = window.getComputedStyle(cursor).display;
      cursor.style.display = displayMode === 'none' ? 'inline' : 'none';
    }, 800);
  })();
</script>
